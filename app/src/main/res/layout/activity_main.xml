<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Header Navbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TaskMate"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8D8D8"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp" />

        <!-- Gambar Header dengan Alarm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/your_image"
                android:background="@drawable/rounded_image" />

            <!-- Spacer untuk memberi jarak antara gambar dan tombol -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola tugas kuliah Anda dengan mudah dan efisien. Jangan lewatkan batas waktu penting dengan pengingat cerdas TaskMate."
            android:textAlignment="center"
            android:textColor="#6B6B6B"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="35dp"
            android:lineSpacingExtra="4dp"
            android:textSize="15sp" />

        <!-- Container untuk tombol dengan spacing yang lebih baik -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- Tombol Kelola Tugas -->
            <Button
                android:id="@+id/btnKelola"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_blue"
                android:drawablePadding="12dp"
                android:paddingLeft="20dp"
                android:text="Kelola Tugas"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:backgroundTint="@null" /> ```

            <!-- Tombol Lihat Daftar Tugas -->
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Lihat Daftar Tugas"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:drawablePadding="12dp"
                android:background="@drawable/button_white_border"
                android:paddingLeft="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:backgroundTint="@null" /> ```

        </LinearLayout>

    </LinearLayout>

</ScrollView>